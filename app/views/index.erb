<div class="return">
    <a href="/">Return to Dashboard</a>
</div>

<h1 class="dashboard">All Tasks</h1>

<div>
    <div class="task">
        <% @tasks.each do |task| %>
            <h3>
                <a href="/tasks/<%= task.id %>">
                    <%= task.title %>
                </a>
            </h3>
            <p>
                <%= task.description %>
            </p>
            <a href="/tasks/<%= task.id  %>/edit"><input type="submit" value="edit" /></a>
            <form action="/tasks/<%= task.id %>" method="POST">
                <input type="hidden" name="_method" value="DELETE">
                <input type="submit" value="delete" />
            </form>
            <% end %>
    </div>

</div>